<Page
    x:Class="Payroll_Management_System.NewDesignationOrDepartment"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Payroll_Management_System"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:ui="using:Microsoft.Toolkit.Uwp.UI"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <muxc:TeachingTip x:ConnectionId='2' x:Name="ToggleTeaching">
            <muxc:TeachingTip.IconSource>
                <muxc:SymbolIconSource Symbol="Refresh" />
            </muxc:TeachingTip.IconSource>
        </muxc:TeachingTip>
        <StackPanel>
            <StackPanel>
                <TextBlock Text="Add new Department" />
                <StackPanel Orientation="Horizontal">
                    <TextBox x:ConnectionId='11' Name="DepartmentName" Header="Department Name" />
                    <Button x:ConnectionId='12'
                        ui:FrameworkElementExtensions.Cursor="Hand"
                        Background="Transparent"
                                            >
                        <StackPanel Orientation="Horizontal">
                            <SymbolIcon Margin="0,0,10,0" Symbol="Add" />
                            <TextBlock Text="Add Department" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>

            <StackPanel>
                <TextBlock Text="Add new Designation" />
                <StackPanel Orientation="Horizontal">
                    <TextBox x:ConnectionId='7' Name="DesignationName" Header="Designation Name" />
                    <TextBox x:ConnectionId='8' Name="perDay" Header="Salary per Day" />
                    <TextBox x:ConnectionId='9' Name="BonusperHour" Header="Bonus per Hour" />
                    <Button x:ConnectionId='10'
                        ui:FrameworkElementExtensions.Cursor="Hand"
                        Background="Transparent"
                                              >
                        <StackPanel Orientation="Horizontal">
                            <SymbolIcon Margin="0,0,10,0" Symbol="Add" />
                            <TextBlock Text="Add Designation" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Horizontal">

                <StackPanel>
                    <StackPanel
                        Width="738"
                        Margin="40,0,0,0"
                        Padding="0,10"
                        Background="#323232"
                        CornerRadius="5"
                        Orientation="Horizontal">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="13" />
                                <ColumnDefinition Width="52" />
                                <ColumnDefinition Width="149" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="1"
                                FontWeight="Bold"
                                Text="ID" />
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="2"
                                FontWeight="Bold"
                                Text="Name" />
                        </Grid>
                    </StackPanel>
                    <ListView x:ConnectionId='5'
                        Name="depart"
                        Width="738"
                        Height="200"
                        Margin="35,0,0,0"
                        Padding="1"
                        BorderBrush="#272727"
                        BorderThickness="1"
                        CornerRadius="6"
                        SelectionMode="Single">
                        <ListView.ItemTemplate>

                            <DataTemplate>

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                    </Grid.RowDefinitions>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50" />
                                        <ColumnDefinition Width="150" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Text="{Binding departmentID}" />
                                    <TextBlock
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Text="{Binding departmentName}" />
                                </Grid>

                            </DataTemplate>

                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>

                <StackPanel>
                    <StackPanel
                        Width="738"
                        Margin="40,0,0,0"
                        Padding="0,10"
                        Background="#323232"
                        CornerRadius="5"
                        Orientation="Horizontal">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="13" />
                                <ColumnDefinition Width="52" />
                                <ColumnDefinition Width="149" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="1"
                                FontWeight="Bold"
                                Text="ID" />
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="2"
                                FontWeight="Bold"
                                Text="Name" />
                        </Grid>
                    </StackPanel>
                    <ListView x:ConnectionId='3'
                        Name="desig"
                        Width="738"
                        Height="200"
                        Margin="35,0,0,0"
                        Padding="1"
                        BorderBrush="#272727"
                        BorderThickness="1"
                        CornerRadius="6"
                        SelectionMode="Single">
                        <ListView.ItemTemplate>

                            <DataTemplate>

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                    </Grid.RowDefinitions>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50" />
                                        <ColumnDefinition Width="150" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Text="{Binding designationID}" />
                                    <TextBlock
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Text="{Binding designationName}" />
                                </Grid>

                            </DataTemplate>

                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>


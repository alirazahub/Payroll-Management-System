<Page x:ConnectionId='1'
    x:Class="Payroll_Management_System.Attendance"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Payroll_Management_System"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <StackPanel>
            <TextBlock
                Margin="0,10,0,100"
                FontSize="25"
                FontWeight="ExtraBold"
                Text="Attendance"
                TextAlignment="Center" />
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <StackPanel
                    Margin="-30,30,30,30"
                    Padding="20,10"
                    CornerRadius="4">

                    <Button x:ConnectionId='6'
                        Width="200"
                        Height="35"
                        Background="LightSteelBlue"
                                            
                        CornerRadius="3"
                        Style="{StaticResource AccentButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <SymbolIcon Margin="0,0,15,0" Symbol="Add" />
                            <TextBlock><Run Text="Add Attendance" /></TextBlock>
                        </StackPanel>
                    </Button>
                </StackPanel>
                <StackPanel
                    Margin="30"
                    Padding="20,10"
                    CornerRadius="4">


                    <CalendarDatePicker Width="200" PlaceholderText="Pick a date" />
                </StackPanel>

                <StackPanel
                    Width="150"
                    Margin="0,30,0,0"
                    Padding="20,10"
                    CornerRadius="4">

                    <Button
                        Height="35"
                        Background="LightSteelBlue"
                        CornerRadius="3"
                        Style="{StaticResource AccentButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <SymbolIcon Margin="0,0,15,0" Symbol="Find" />
                            <TextBlock><Run Text="Search" /></TextBlock>
                        </StackPanel>
                    </Button>

                </StackPanel>

            </StackPanel>

            <muxc:NavigationViewItemSeparator />
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <StackPanel
                    Width="200"
                    Margin="30"
                    Padding="20,10"
                    Background="#323232"
                    CornerRadius="4">
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="20"
                        FontWeight="Bold">
                        Total Employees
                    </TextBlock>
                    <muxc:NavigationViewItemSeparator />
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="20"
                        FontWeight="Bold">
                        50
                    </TextBlock>
                </StackPanel>
                <StackPanel
                    Width="200"
                    Margin="30"
                    Padding="20,10"
                    Background="#323232"
                    CornerRadius="4">
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="20"
                        FontWeight="Bold">
                        Present
                    </TextBlock>
                    <muxc:NavigationViewItemSeparator />
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="20"
                        FontWeight="Bold">
                        10
                    </TextBlock>
                </StackPanel>
                <StackPanel
                    Width="200"
                    Margin="30"
                    Padding="20,10"
                    Background="#323232"
                    CornerRadius="4">
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="20"
                        FontWeight="Bold">
                        Absent
                    </TextBlock>
                    <muxc:NavigationViewItemSeparator />
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="20"
                        FontWeight="Bold">
                        30
                    </TextBlock>
                </StackPanel>
            </StackPanel>

            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <StackPanel
                    Width="200"
                    Margin="30"
                    Padding="20,10"
                    Background="#323232"
                    CornerRadius="4">
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="20"
                        FontWeight="Bold">
                        Total Leaves
                    </TextBlock>
                    <muxc:NavigationViewItemSeparator />
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="20"
                        FontWeight="Bold">
                        10
                    </TextBlock>
                </StackPanel>
                <StackPanel
                    Width="200"
                    Margin="30"
                    Padding="20,10"
                    Background="#323232"
                    CornerRadius="4">
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="20"
                        FontWeight="Bold">
                        Accepted
                    </TextBlock>
                    <muxc:NavigationViewItemSeparator />
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="20"
                        FontWeight="Bold">
                        7
                    </TextBlock>
                </StackPanel>
                <StackPanel
                    Width="200"
                    Margin="30"
                    Padding="20,10"
                    Background="#323232"
                    CornerRadius="4">
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="20"
                        FontWeight="Bold">
                        Rejected
                    </TextBlock>
                    <muxc:NavigationViewItemSeparator />
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="20"
                        FontWeight="Bold">
                        3
                    </TextBlock>
                </StackPanel>
            </StackPanel>

            <Button Margin="0,80,0,0" HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal">
                    <SymbolIcon Margin="0,0,10,0" Symbol="More" />
                    <TextBlock Text="Check Details" />
                </StackPanel>
            </Button>


        </StackPanel>
        <ContentDialog x:ConnectionId='2'
            x:Name="addNewAttendanceDialog"
            CloseButtonText="Cancel"
            IsPrimaryButtonEnabled="False"
            PrimaryButtonText="Add">

            <ContentDialog.TitleTemplate>
                <DataTemplate>
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                        <TextBlock Text="Add New Attendance" />
                    </StackPanel>
                </DataTemplate>
            </ContentDialog.TitleTemplate>
            <StackPanel
                Padding="20"
                BorderBrush="Gray"
                BorderThickness="1"
                CornerRadius="6">
                <StackPanel Margin="0 0 0 10" Orientation="Horizontal">
                    <TextBlock Margin="0 6 40 0 " Text="Select Date"/>
                    <CalendarDatePicker Width="163"/>
                </StackPanel>
                <StackPanel
                    Width="275"
                    Margin="0,0,0,0"
                    Padding="0,10"
                    Background="#323232"
                    CornerRadius="5"
                    Orientation="Horizontal">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="25" />
                            <ColumnDefinition Width="53" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="1"
                            FontWeight="Bold"
                            Text="ID" />
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="2"
                            FontWeight="Bold"
                            Text="Full Name" />
                    </Grid>
                </StackPanel>
                <ListView x:ConnectionId='4' BorderThickness="10"                                 >
                    <ListView.ItemTemplate>

                        <DataTemplate>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50" />
                                    <ColumnDefinition Width="120" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Text="{Binding employeeID}" />
                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Text="{Binding employeeName}" />

                            </Grid>

                        </DataTemplate>

                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>

        </ContentDialog>

    </Grid>
</Page>


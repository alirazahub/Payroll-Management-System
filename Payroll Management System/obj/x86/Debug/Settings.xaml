<Page
    x:Class="Payroll_Management_System.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Payroll_Management_System"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:ui="using:Microsoft.Toolkit.Uwp.UI"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">
    <Grid>
        <StackPanel>
            <StackPanel>
                <TextBlock
                    Margin="0,20,0,10"
                    FontSize="27"
                    FontWeight="Bold"
                    Text="Settings"
                    TextAlignment="Center" />
            </StackPanel>
            <StackPanel Width="1100" Margin="0,10">
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        FontSize="20"
                        FontWeight="Bold"
                        Text="Change Designation" />
                    <Button x:ConnectionId='14'
                        Width="102"
                        Margin="805,0,0,0"
                        ui:FrameworkElementExtensions.Cursor="Hand"
                        Background="Transparent"
                                              >
                        <StackPanel Orientation="Horizontal">
                            <SymbolIcon Margin="0,0,10,0" Symbol="Edit" />
                            <TextBlock Text="Change" />
                        </StackPanel>
                    </Button>

                </StackPanel>
                <muxc:NavigationViewItemSeparator />
            </StackPanel>

            <StackPanel Width="1100" Margin="0,10">
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        FontSize="20"
                        FontWeight="Bold"
                        Text="Change Department" />
                    <Button x:ConnectionId='13'
                        Width="102"
                        Margin="805,0,0,0"
                        ui:FrameworkElementExtensions.Cursor="Hand"
                        Background="Transparent"
                                              >
                        <StackPanel Orientation="Horizontal">
                            <SymbolIcon Margin="0,0,10,0" Symbol="Edit" />
                            <TextBlock Text="Change" />
                        </StackPanel>
                    </Button>

                </StackPanel>
                <muxc:NavigationViewItemSeparator />
            </StackPanel>



            <StackPanel Width="1100" Margin="0,10">
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        FontSize="20"
                        FontWeight="Bold"
                        Text="Change Salary or PerHour Rate" />
                    <Button x:ConnectionId='12'
                        Margin="706,0,0,0"
                        ui:FrameworkElementExtensions.Cursor="Hand"
                        Background="Transparent"
                                              >
                        <StackPanel Orientation="Horizontal">
                            <SymbolIcon Margin="0,0,10,0" Symbol="Edit" />
                            <TextBlock Text="Change" />
                        </StackPanel>
                    </Button>

                </StackPanel>
                <muxc:NavigationViewItemSeparator />
            </StackPanel>

            <StackPanel Width="1100" Margin="0,10">
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        FontSize="20"
                        FontWeight="Bold"
                        Text="Who can Login to this System" />
                    <Button x:ConnectionId='11'
                        Width="102"
                        Margin="717,0,0,0"
                        ui:FrameworkElementExtensions.Cursor="Hand"
                        Background="Transparent"
                                              >
                        <StackPanel Orientation="Horizontal">
                            <SymbolIcon Margin="0,0,10,0" Symbol="Admin" />
                            <TextBlock Text="Check" />
                        </StackPanel>
                    </Button>

                </StackPanel>
                <muxc:NavigationViewItemSeparator />
            </StackPanel>

            <StackPanel Width="1100" Margin="0,10">
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        FontSize="20"
                        FontWeight="Bold"
                        Text="Custom Searching" />
                    <Button x:ConnectionId='10'
                        Width="102"
                        Margin="825,0,0,0"
                        ui:FrameworkElementExtensions.Cursor="Hand"
                        Background="Transparent"
                                              >
                        <StackPanel Orientation="Horizontal">
                            <SymbolIcon Margin="0,0,10,0" Symbol="Find" />
                            <TextBlock Text="Search" />
                        </StackPanel>
                    </Button>
                </StackPanel>
                <muxc:NavigationViewItemSeparator />
            </StackPanel>

            <StackPanel Width="1100" Margin="0,10">
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        FontSize="20"
                        FontWeight="Bold"
                        Text="Delete Data" />
                    <Button x:ConnectionId='9'
                        Width="102"
                        Margin="882,0,0,0"
                        ui:FrameworkElementExtensions.Cursor="Hand"
                        Background="Transparent"
                                            >
                        <StackPanel Orientation="Horizontal">
                            <SymbolIcon Margin="0,0,10,0" Symbol="Delete" />
                            <TextBlock Text="Delete" />
                        </StackPanel>
                    </Button>
                </StackPanel>
                <muxc:NavigationViewItemSeparator />
            </StackPanel>
            <StackPanel Width="1100" Margin="0,10">
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        FontSize="20"
                        FontWeight="Bold"
                        Text="Add Department or Designation" />
                    <Button x:ConnectionId='8'
                        Width="102"
                        Margin="692,0,0,0"
                        ui:FrameworkElementExtensions.Cursor="Hand"
                        Background="Transparent"
                                              >
                        <StackPanel Orientation="Horizontal">
                            <SymbolIcon Margin="0,0,10,0" Symbol="Add" />
                            <TextBlock Text="Add" />
                        </StackPanel>
                    </Button>
                </StackPanel>
                <muxc:NavigationViewItemSeparator />
            </StackPanel>
            <!--<StackPanel Width="1100" Margin="0,10">
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        FontSize="20"
                        FontWeight="Bold"
                        Text="Pay Custom Salary" />
                    <Button
                        Width="102"
                        Margin="819,0,0,0"
                        ui:FrameworkElementExtensions.Cursor="Hand"
                        Background="Transparent">
                        <StackPanel Orientation="Horizontal">
                            <SymbolIcon Margin="0,0,10,0" Symbol="ZeroBars" />
                            <TextBlock Text="Pay" />
                        </StackPanel>
                    </Button>
                </StackPanel>
                <muxc:NavigationViewItemSeparator />
            </StackPanel>-->

            <StackPanel
                Margin="0,230,0,0"
                Padding="0,5"
                Background="#323232"
                Orientation="Horizontal">
                <TextBlock
                    Margin="6,3,0,0"
                    FontSize="18"
                    FontWeight="Bold"
                    Text="Change UserName or Password" />
                <Button x:ConnectionId='7'
                    Margin="830,0,0,0"
                    ui:FrameworkElementExtensions.Cursor="Hand"
                    Background="Transparent"
                                          >
                    <StackPanel Orientation="Horizontal">
                        <SymbolIcon Symbol="Setting" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </StackPanel>
        <ContentDialog x:ConnectionId='2'
            x:Name="ChangeContentDialog"
            CloseButtonText="Cancel"
            IsPrimaryButtonEnabled="False"
            PrimaryButtonText="Update">

            <ContentDialog.TitleTemplate>
                <DataTemplate>
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                        <TextBlock Text="Change Username or Password" />
                    </StackPanel>
                </DataTemplate>
            </ContentDialog.TitleTemplate>
            <StackPanel
                BorderBrush="Gray"
                BorderThickness="1"
                CornerRadius="6">
                <StackPanel Padding="20" Orientation="Horizontal">
                    <TextBlock
                        Margin="0,4,0,0"
                        FontSize="16"
                        FontWeight="Bold"
                        Text="UserName:" />
                    <TextBox x:ConnectionId='6'
                        Name="username"
                        Width="300"
                        Margin="65,0,0,0" />
                </StackPanel>
                <StackPanel Padding="20" Orientation="Horizontal">
                    <TextBlock
                        Margin="0,4,0,0"
                        FontSize="16"
                        FontWeight="Bold"
                        Text="Password:" />
                    <TextBox x:ConnectionId='5'
                        Name="password"
                        Width="300"
                        Margin="70,0,0,0" />
                </StackPanel>
            </StackPanel>
        </ContentDialog>
        <muxc:TeachingTip x:ConnectionId='3'
            x:Name="SettingToggleTeaching"
            Title="Task"
            Subtitle="Task Added SuccessFully">
            <muxc:TeachingTip.IconSource>
                <muxc:SymbolIconSource Symbol="Refresh" />
            </muxc:TeachingTip.IconSource>
        </muxc:TeachingTip>
    </Grid>
</Page>


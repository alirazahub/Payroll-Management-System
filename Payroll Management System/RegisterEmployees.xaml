<Page
    x:Class="Payroll_Management_System.RegisterEmployees"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Payroll_Management_System"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical">
            <TextBlock
                Margin="0,0,0,50"
                HorizontalAlignment="Center"
                FontSize="35">
                Register New Emloyee
            </TextBlock>
            <TextBlock
                Margin="0,0,0,0"
                HorizontalAlignment="Left"
                FontSize="15">
                Peronal Information
            </TextBlock>
            <muxc:NavigationViewItemSeparator />
            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBox
                    x:Name="employeeName"
                    Width="300"
                    Margin="6"
                    Padding="3"
                    Header="Name" />
                <TextBox
                    x:Name="employeeNIC"
                    Width="300"
                    Margin="6"
                    Padding="3"
                    Header="CINIC" />
                <TextBox
                    x:Name="employeeContact"
                    Width="300"
                    Margin="6"
                    Padding="3"
                    Header="Contact No" />
            </StackPanel>
            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBox
                    x:Name="employeeEmail"
                    Width="300"
                    Margin="6"
                    Padding="3"
                    Header="Email" />
                <DatePicker
                    Name="employeeDOB"
                    Margin="10,12,10,0"
                    VerticalAlignment="Top"
                    Header="Date Of Birth" />

                <ComboBox
                    x:Name="gender"
                    Width="300"
                    Margin="6"
                    Padding="3"
                    Header="Gender"
                    PlaceholderText="Select Gender">
                    <ComboBoxItem Content="Male" />
                    <ComboBoxItem Content="Female" />
                </ComboBox>
            </StackPanel>
            <TextBlock
                Margin="0,20,0,0"
                HorizontalAlignment="Left"
                FontSize="15">
                Address Details
            </TextBlock>
            <muxc:NavigationViewItemSeparator />
            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBox
                    x:Name="houseNo"
                    Width="214"
                    Margin="10"
                    Padding="5"
                    Header="House No" />
                <TextBox
                    x:Name="street"
                    Width="214"
                    Margin="10"
                    Padding="5"
                    Header="Street" />
                <TextBox
                    x:Name="town"
                    Width="214"
                    Margin="10"
                    Padding="5"
                    Header="Town" />
                <TextBox
                    x:Name="city"
                    Width="214"
                    Margin="10"
                    Padding="5"
                    Header="City" />
            </StackPanel>
            <TextBlock
                Margin="0,20,0,0"
                HorizontalAlignment="Left"
                FontSize="15">
                Offical Details
            </TextBlock>
            <muxc:NavigationViewItemSeparator />
            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <ComboBox
                    x:Name="employeeDepartment"
                    Width="300"
                    Margin="6"
                    Padding="3"
                    Header="Department of Employee"
                    PlaceholderText="Select Department">
                    <ComboBoxItem Content="1" />
                    <ComboBoxItem Content="2" />
                    <ComboBoxItem Content="3" />
                    <ComboBoxItem Content="4" />
                    <ComboBoxItem Content="5" />
                </ComboBox>
                <ComboBox
                    x:Name="employeeDesignation"
                    Width="300"
                    Margin="6"
                    Padding="3"
                    Header="Designation of Employee"
                    PlaceholderText="Select Designation">
                    <ComboBoxItem Content="1" />
                    <ComboBoxItem Content="2" />
                    <ComboBoxItem Content="3" />
                    <ComboBoxItem Content="4" />
                    <ComboBoxItem Content="5" />
                </ComboBox>
                <DatePicker
                    x:Name="joiningDate"
                    Width="305"
                    Margin="6,10,6,6"
                    Padding="3"
                    VerticalAlignment="Top"
                    Header="Joining Date" />
            </StackPanel>
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <Button
                    x:Name="registerEmployee"
                    Width="200"
                    Height="35"
                    Margin="300,60,30,0"
                    Click="registerEmployee_Click"
                    CornerRadius="3">
                    <StackPanel Orientation="Horizontal">
                        <SymbolIcon Margin="0,0,15,0" Symbol="Add" />
                        <TextBlock><Run Text="Register Employee" /></TextBlock>
                    </StackPanel>

                </Button>
            </StackPanel>
        </StackPanel>
        
    </Grid>
</Page>

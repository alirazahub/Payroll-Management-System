<Page
    x:Class="Payroll_Management_System.Attendance"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Payroll_Management_System"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <StackPanel>
            <TextBlock
                Margin="0,10,0,0"
                FontSize="25"
                FontWeight="ExtraBold"
                Text="Attendance"
                TextAlignment="Center" />
            <StackPanel Orientation="Horizontal">
            <Button
                Width="200"
                Height="35"
                Margin="20 50 0 0"
                CornerRadius="3"
                Background="LightSteelBlue"
                Style="{StaticResource AccentButtonStyle}">
                <StackPanel Orientation="Horizontal">
                    <SymbolIcon Margin="0,0,15,0" Symbol="Add" />
                    <TextBlock><Run Text="Add Attendance" /></TextBlock>
                </StackPanel>
            </Button>
                <TextBox Margin="20 50 0 0" Width="400" PlaceholderText="Search Here...."/>
            </StackPanel>


        </StackPanel>
    </Grid>
</Page>
